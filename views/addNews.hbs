<div class="container login">
        <div class="col-md-12">
            <legend class="text-danger bold-text">Add News</legend>
                <form method="post" action="/news/new" enctype="multipart/form-data">
                    <fieldset>
                        <legend class="text-danger">Feature Image</legend>
                            <hr />
                            <div class="mb-2 row">
                                <div class="form-group">
                                    <input class="form-control" id="featureImage" name="featureImage" type="file" />
                                </div>
                            </div>
                    </fieldset>
                    <br />
                    <fieldset>
                        <legend class="text-danger">News Content</legend>
                            <hr />
                                <div class="row mb-3">
                                    <label for="title" class="col-sm-2 col-form-label">Title:</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" id="title" name="title" type="text" />
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="brief" class="col-sm-2 col-form-label">Brief description:</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" id="bried" name="brief" type="text" />
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <div class="form-group">
                                        <label for="body">Body:</label>
                                        <textarea class="form-control" id="body" name="body" rows=15></textarea>
                                    </div>
                                </div>
                    </fieldset>
                </form>
        </div>
        <button type="submit" class="btn btn-warning float-end">Add News</button>
</div>