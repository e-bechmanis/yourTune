<div class="container login">
  <form action="/albums/new" method="POST" enctype="multipart/form-data">
    </br>
    <fieldset>
      <legend class="text-danger bold-text">New Album</legend>
      <div class="row mb-3">
        <label for="title" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="title" name="title" placeholder="Enter album title">
        </div>
      </div>
      <div class="row mb-3">
        <label for="artist" class="col-sm-2 col-form-label">Artist</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="artist" name="artist" placeholder="Enter artist name">
        </div>
      </div>
      <div class="row mb-3">
        <label for="year" class="col-sm-2 col-form-label">Year</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="year" name="year" placeholder="Enter year produced">
        </div>
      </div>

      <div class="row mb-3">
        <label for="genre" class="col-sm-2 col-form-label">Genre</label>
        <div class="col-sm-10">
        <select class="form-select" id="genreID" name="genreID">
          <option value="">Select Genre</option>
          {{#each data}}
            <option label="{{genre}}">{{genreID}}</option>
          {{/each}}
        </select>
        </div>
      </div>

      <div class="row mb-3">
        <label for="albumCover" class="col-sm-2 col-form-label">Album Cover</label>
        <div class="col-sm-10">
          <input type="file" class="form-control" id="albumCover" name="albumCover">
        </div>
      </div>
      </br>
      <button type="submit" class="btn btn-warning float-end">Submit</button>
    </fieldset>
  </form>
</div>