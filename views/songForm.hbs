<div class="container login">
  <form action="/songs/new" method="POST" enctype="multipart/form-data">
    </br>
    <fieldset>
      <legend class="text-danger bold-text">New Song</legend>
      <div class="row mb-3">
        <label for="albumID" class="col-sm-2 col-form-label">Album</label>
        <div class="col-sm-10">
          <select class="form-select" id="albumID" name="albumID">
          {{#each data}}
          <option label="{{title}}">{{albumID}}</option>
          {{/each}}
          </select>
        </div>
      </div>
      <div class="row mb-3">
        <label for="title" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="title" name="title" placeholder="Enter song title">
        </div>
      </div>

      <div class="row mb-3">
        <label for="songFile" class="col-sm-2 col-form-label">Song File</label>
        <div class="col-sm-10">
          <input type="file" class="form-control" id="songFile" name="songFile">
        </div>
      </div>
      </fieldset>
      <div class="row mb-3">
        <div class="col-sm-10 offset-sm-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="single">
              <label class="form-check-label" for="single">
                Single
              </label>
          </div>
        </div>
       </div>
      <button type="submit" class="btn btn-warning float-end">Submit</button>
    
  </form>
</div>