<div class="container-fluid songs">
<div class="container songs">
    <div class="col-md-3 float-start">
      <div class="card my-card" style="width: 25rem;">
        <img src="{{data.album.albumCover}}" class="card-img-top" alt="album cover">
          <div class="card-body">
            <h4>{{data.album.title}}</h4>
            <h5 class="text-danger">{{data.album.artist}}</h5>
            <span class="text muted">{{data.album.year}}</span>
          </div>
      </div>
    </div>
    <div class="col-md-6 float-end">
      <h3 class="text-danger">Songs <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-play-circle" viewBox="0 0 16 16">
  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  <path d="M6.271 5.055a.5.5 0 0 1 .52.038l3.5 2.5a.5.5 0 0 1 0 .814l-3.5 2.5A.5.5 0 0 1 6 10.5v-5a.5.5 0 0 1 .271-.445z"/>
</svg></h3>
      </hr>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Play</th>
          </tr>
        </thead>
        <tbody>
          {{#each data.songs}}
          <tr>
            <td class="align-middle">{{title}}</td>
            <td><audio controls>
                <source src="{{songFile}}" type="audio/mpeg">
              </audio></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    {{#unless data.songs}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>
</div>